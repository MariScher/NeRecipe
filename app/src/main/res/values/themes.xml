<resources>
    <!-- Base application theme. -->
    <style name="Theme.NeRecipe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_700</item>
        <item name="colorPrimaryVariant">@color/yellow_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_200</item>
        <item name="colorSecondaryVariant">@color/yellow_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.AppTheme.OptionsButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/icon_menu</item>
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
    </style>

    <style name="Widget.AppTheme.Favorite" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/check_favorites</item>
        <item name="iconTint">@color/favorite_tint</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
    </style>
</resources>